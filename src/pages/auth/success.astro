import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabase";
import Stripe from 'stripe';

const stripe = new Stripe(import.meta.env.STRIPE_SECRET_KEY, {
  apiVersion: "2025-04-30.basil",
});

// R√©cup√©rer le session_id depuis l'URL
const sessionId = Astro.url.searchParams.get('session_id');

let paymentSuccess = false;
let planType = '';
let userEmail = '';
let errorMessage = '';

if (sessionId) {
  try {
    // R√©cup√©rer les d√©tails de la session Stripe
    const session = await stripe.checkout.sessions.retrieve(sessionId);
    
    if (session.payment_status === 'paid') {
      paymentSuccess = true;
      planType = session.metadata?.plan_type || '';
      userEmail = session.metadata?.user_email || '';
      
      console.log('Paiement r√©ussi pour:', { sessionId, planType, userEmail });
      
      // Activer le plan dans Supabase
      const userId = session.metadata?.user_id;
      if (userId && planType) {
        try {
          if (planType === 'one_time') {
            await supabase.rpc('activate_one_time_plan', { user_uuid: userId });
          } else if (planType === 'premium') {
            await supabase.rpc('activate_premium_plan', { user_uuid: userId });
          }
          
          console.log(`Plan ${planType} activ√© pour l'utilisateur ${userId}`);
        } catch (dbError) {
          console.error('Erreur lors de l\'activation du plan:', dbError);
          errorMessage = 'Plan pay√© mais erreur d\'activation. Contactez le support.';
        }
      }
    } else {
      errorMessage = 'Le paiement n\'a pas √©t√© confirm√©';
    }
  } catch (error) {
    console.error('Erreur lors de la v√©rification du paiement:', error);
    errorMessage = 'Erreur lors de la v√©rification du paiement';
  }
} else {
  errorMessage = 'Session de paiement non trouv√©e';
}
